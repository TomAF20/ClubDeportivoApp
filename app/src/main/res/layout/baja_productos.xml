<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baja de Producto"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etIdBaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del producto"
            android:inputType="number"
            android:background="@drawable/et_borde"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etMotivoBaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Motivo de baja"
            android:inputType="textCapSentences"
            android:background="@drawable/et_borde"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnConfirmarBaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Baja"
            android:background="@drawable/bg_button"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
