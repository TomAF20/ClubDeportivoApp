<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iconoUsuario"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/icono_user"
        android:contentDescription="Ícono de usuario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/formularioLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputUsuario"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/campo_texto_blanco"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:layout_marginBottom="24dp"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/campo_texto_blanco"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:padding="14dp"
            android:layout_marginBottom="32dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLoginGo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Go...!"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_iniciar_sesion"
            android:padding="14dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
