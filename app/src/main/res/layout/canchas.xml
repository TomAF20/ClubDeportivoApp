                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:elevation="3dp" />

                    <Button
                        android:id="@+id/btnReservar5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver más"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#52B788"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="12dp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay turnos disponibles"
                    android:textColor="#FFB4A2"
                    android:textStyle="bold"
                    android:paddingTop="6dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_bg"
                android:elevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cancha_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_margin="12dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:background="@drawable/title_bg"
                        android:text="CANCHA 6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:elevation="3dp" />

                    <Button
                        android:id="@+id/btnReservar6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver más"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#52B788"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="12dp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turnos disponibles"
                    android:textColor="#B7E4C7"
                    android:textStyle="bold"
                    android:paddingTop="6dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#1B4332"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
