<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL DE CANCHAS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4B2C84"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp" />

            <com.example.clubdeportivo.BarChartView
                android:id="@+id/barChartView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"
                android:background="#F9F9F9" />

            <TextView
                android:id="@+id/tv_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canchas alquiladas por día de la semana"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- CANCHA 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/icono_cancha"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#4B2C84" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginLeft="12dp"
                        android:text="Cancha 1"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/counter_cancha1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_counter"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CANCHA 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/icono_cancha"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#2196F3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginLeft="12dp"
                        android:text="Cancha 2"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/counter_cancha2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_counter"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CANCHA 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/icono_cancha"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#FF5722" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginLeft="12dp"
                        android:text="Cancha 3"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/counter_cancha3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_counter"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CANCHA 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/icono_cancha"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginLeft="12dp"
                        android:text="Cancha 4"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/counter_cancha4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_counter"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BARRA DE NAVEGACIÓN INFERIOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#B0C4DE"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_canchas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Canchas"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#4B2C84" />

        <Button
            android:id="@+id/btn_empleados"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Empleados"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#4B2C84" />

        <Button
            android:id="@+id/btn_ingresos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ingresos"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#4B2C84" />

        <Button
            android:id="@+id/btn_informes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Informes"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#4B2C84" />

    </LinearLayout>
</LinearLayout>

