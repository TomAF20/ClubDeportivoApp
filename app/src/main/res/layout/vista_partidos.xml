<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fondo_gradiente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título con botón de retroceso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Volver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partidos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Contenedor scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TARJETA 1 -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#61E3E1"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Partido 1: Equipo A vs Equipo B"
                    android:textStyle="bold" android:textColor="#000000"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Fecha y Hora: Hoy 16:00 - 18:00"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Cancha: 1"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Categoría: Sub -18"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <Button android:text="VER MÁS"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:backgroundTint="#004D4D" android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- TARJETA 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#61E3E1"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Partido 2: Equipo C vs Equipo D"
                    android:textStyle="bold" android:textColor="#000000"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Fecha y Hora: Hoy 18:30 - 20:30"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Cancha: 2"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Categoría: Sub -20"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <Button android:text="VER MÁS"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:backgroundTint="#004D4D" android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- TARJETA 3 -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#61E3E1"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Partido 3: Equipo E vs Equipo F"
                    android:textStyle="bold" android:textColor="#000000"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Fecha y Hora: Mañana 10:00 - 12:00"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Cancha: 3"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />

                <TextView android:text="Categoría: Libre"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <Button android:text="VER MÁS"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:backgroundTint="#004D4D" android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
