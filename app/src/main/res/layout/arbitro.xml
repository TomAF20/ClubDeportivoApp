<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/fondo_gradiente"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitulo"
        android:text="@string/titulo_arbitro"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnPartidos"
        android:text="@string/btn_partidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnChat"
        android:text="@string/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnHistorial"
        android:text="@string/btn_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnReportar"
        android:text="@string/btn_reportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnPerfil"
        android:text="@string/btn_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

</LinearLayout>
