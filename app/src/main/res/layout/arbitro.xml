<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1B4332">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#2D6A4F"
        android:title="Árbitro"
        android:titleTextColor="#FFFFFF"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btnPartidos"
        android:text="@string/btn_partidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnChat"
        android:text="@string/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnHistorial"
        android:text="@string/btn_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnReportar"
        android:text="@string/btn_reportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnPerfil"
        android:text="@string/btn_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#004D4D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textAllCaps="false" />



</LinearLayout>
